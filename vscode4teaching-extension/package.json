{
	"name": "vscode4teaching",
	"publisher": "codeurjc-students",
	"author": {
		"name": "Iván Chicano Capelo",
		"email": "ivchicano@gmail.com"
	},
	"repository": {
		"type" : "git",
		"url" : "https://github.com/codeurjc-students/2019-VSCode4Teaching.git",
		"directory": "vscode4teaching-extension"
	},
	"displayName": "VS Code 4 Teaching",
	"description": "Bring the programming exercises directly to the student’s editor.",
	"version": "0.0.1-SNAPSHOT",
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:vscode4teaching"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode4teachingcontainer",
					"title": "V4T",
					"icon": "resources/v4t.png"
				}
			]
		},
		"views": {
			"vscode4teachingcontainer": [
				{
					"id": "vscode4teaching",
					"name": "VS Code 4 Teaching"
				}
			]
		}
	},
	"menus": {
		"view/title": [
			{
				"command": "vscode4teaching.login",
				"when": "view == vscode4teaching"
			},
			{
				"command": "vscode4teaching.getexercisefiles",
				"when": "view == vscode4teaching"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.22",
		"@types/simple-mock": "^0.8.1",
		"@types/vscode": "^1.39.0",
		"@types/rimraf": "^2.0.3",
		"glob": "^7.1.4",
		"mocha": "^6.2.2",
		"rimraf": "^3.0.0",
		"simple-mock": "^0.8.0",
		"tslint": "^5.12.1",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"@types/jszip": "^3.1.6",
		"axios": "^0.19.0",
		"jszip": "^3.2.2"
	}
}
